<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">CATÁLOGO DE DOCUMENTOS</div>
    <div class="panel-body">
        <!-- Table -->
        <table class="table" id="registerFound">
            <tr>
                <th>IDENTIFICADOR</th>
                <th>DESCRIPCIÓN</th>
                @*<th>REPRESENTANTE LEGAL</th>*@
                <th>Eliminar</th>
