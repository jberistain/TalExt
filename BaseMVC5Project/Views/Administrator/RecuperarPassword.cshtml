@model MigracionTalentoExtranjero.Models.Administrator.Login
@{

}
<div id="login">
    <h1 class="page-header text-center">Autenticación </h1>

    <div class="row">
        <div class="col-xs-8">
            <div class="panel panel-default">
                <div class="panel-heading">¿Olvidaste tu contraseña?</div>
                <div class="panel-body">
                    @using (Html.BeginForm("IntentaRecuperarPassword", "Administrator", FormMethod.Post, new { id = "frm-login" }))
                    {

                        <div class="form-group">
                            <label>Usuario</label>
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", type = "text", required = "required" })
                        </div>
                        <div class="form-group">
                            <label>Correo Electrónico</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "mail", required = "required" })
                        </div>
                        <div class="text-left">
                            <button type="submit" class="btn btn-primary">
                                Enviar Nueva Contraseña
                            </button>
                        </div>
                        <div>
                            <label>@Model.Mensaje</label>
                        </div>

                        <div>
                            <a href="@Url.Content("~/Administrator/Login")">Login</a>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>


